{% extends 'base.html.twig' %}

{% block title %} Details order !{% endblock %}

{% block body %}

{{ include("partials/title.html.twig", {'name':'Commande Details'}) }}

<div class="section">
	<div class="container">
        <div>
            <div class="order-reference">
                <div>Reference: {{ order.reference }}</div>
                <div>Date: {{ order.createdAt | date('d/m/Y') }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive shop_cart_table">
                	<table class="table">
                    	<thead>
                        	<tr>
                                <th class="product-name">Product Name</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-subtotal">SubTotalHT</th>
                                <th class="product-subtotal">Taxe</th>
                                <th class="product-subtotal">SubTotalHT</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for element in order.orderDetails %} 
                        <tr>
                                <td class="product-name" data-title="Product"><a href="#">{{ element.productName}}</a></td>
                                <td class="product-price" data-title="Price">€ {{ element.productPrice }}</td>
                                <td class="product-quantity" data-title="Quantity">{{ element.productQuantity }}</td>
                                  <td class="product-subtotal" data-title="Total">${{ element.subTotalHT}}</td>
                                  <td class="product-subtotal" data-title="Total">${{ element.taxe}}</td>
                                  <td class="product-subtotal" data-title="Total">${{ element.subTotalTTC | round(2, 'floor')}}</td>  
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th class="product-name">Product Name</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-subtotal">SubTotalHT</th>
                                <th class="product-subtotal">Taxe</th>
                                <th class="product-subtotal">SubTotalHT</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
            	<div class="medium_divider"></div>
            	<div class="divider center_icon"><i class="ti-shopping-cart-full"></i></div>
            	<div class="medium_divider"></div>
            </div>
        </div>
        <div class="row">
        	<div class="col-md-6">


            </div>
            <div class="col-md-6">
            	<div class="border p-3 p-md-4">
                    <div class="heading_s1 mb-3">
                        <h6>Commande montants</h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="cart_total_label">Montant total HT</td>
                                    <td class="cart_total_amount">€ {{ order.subTotalHT }}</td>
                                </tr>
                                <tr>
                                    <td class="cart_total_label">Transport ({{ order.transportName }}) </td>
                                    <td class="cart_total_amount">€ {{ order.transportPrice }}</td>
                                </tr>
                                <tr>
                                    <td class="cart_total_label">Taxe (20%) </td>
                                    <td class="cart_total_amount">€ {{ order.taxe }}</td>
                                </tr>
                                <tr>
                                    <td class="cart_total_label">Total TTC</td>
                                    <td class="cart_total_amount"><strong>€ {{ order.subTotalTTC  }}</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <a href="{{ path('compte')}}" class="btn btn-fill-out">Retour</a>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}